<%- include('../public_partials/head.ejs') %>

<body id="page">
  <%- include('../public_partials/navbar.ejs') %>
  <div class="" id="content">
    <section data-section-id="2" data-share="" data-category="product-info" data-component-id="b9652106_01_awz" class="section is-clipped">

      <div class="container">
        <div class="mb-24 columns is-multiline">
          <div class="column is-6 p-1 mb-8 mb-0-tablet">
            <div class="mb-10 is-relative" style="height: 564px; text-align: center;">

              <img class="image is-cover" style="max-width: 800px; height: auto; display: inline-block;" src="<%=_producto.imagen_destacada%>" alt="" data-config-id="auto-img-1-1">

            </div>
            <div class="columns is-mobile is-multiline">
              <% _imagenes.forEach(function(imagen) { %>
              <div class="column is-6-mobile is-3-tablet">
                <a class="is-block">
                  <img class="image is-cover" style="height: 128px; width: 100%;" src="<%=imagen.url%>" alt="" data-config-id="image1">
                </a>
              </div>
              <% }); %>
            </div>
          </div>
          <div class="column is-6">
            <div class="pl-20-desktop">
              <div class="mb-10 pb-10">
                <span class="has-text-grey-dark" data-config-id="label"><%=_producto.nombre_categoria%></span>
                <h1 class="title is-1 is-size-2-touch has-leading-2 has-mw-xl mt-2 mb-6" data-config-id="title"><%=_producto.nombre%></h1>

                <p class="mb-8 is-inline-block">
                  <span class="is-size-5 has-text-info has-text-weight-bold" data-config-id="price">$ <%=_producto?.precio.toFixed(2)%></span>
                  <span class="is-size-6 has-text-grey" style="text-decoration: line-through;" data-config-id="price-old"><%=((_producto?.precio * 0.50) + _producto?.precio).toFixed(2) %></span>
                </p>
                <p class="has-text-grey has-mw-md" data-config-id="desc"><%=_producto.descripcion%></p>
              </div>



              <% if(name){ %>
              <form action="/checkout" method="get">
                <div class="mb-14 columns is-multiline">
                  <div class="column is-12-touch is-12-desktop is-7-widescreen"><button type="submit" class="button is-primary is-fullwidth" data-config-id="primary-action">Comprar</button></div>
                  <div class="field" style="margin-top: 10px; margin-left:10px; margin-right:10px;">
                    <div class="control">
                      <input type="hidden" name="producto_id" value="<%=_producto.id%>">
                      <input class="input" type="number" name="cantidad" placeholder="Cantidad" value="1" required>
                    </div>
                  </div>

                </div>
              </form>

              <% } else{ %>
              <div class="column is-12-touch is-12-desktop is-7-widescreen"><a target="_blank" href="/registro" class="button is-primary is-fullwidth" data-config-id="primary-action">Registrate para comprar</a></div>

              <% } %>
              <div class="mb-14 columns is-multiline">

                <div class="column is-12-touch is-6-desktop is-5-widescreen">
                  <a class="button px-6 mr-4">
                    <svg class="-mt-1" width="27" height="27" viewBox="0 0 27 27" fill="none" xmlns="http://www.w3.org/2000/svg" data-config-id="auto-svg-5-1">
